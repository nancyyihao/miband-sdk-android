<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zsg.miband.MiBandActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接手环"
        android:id="@+id/button3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="doConnect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电池信息"
        android:id="@+id/button4"
        android:layout_alignBottom="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="getBattery"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置用户信息"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentEnd="true"
        android:onClick="setUserInfo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试心跳信息"
        android:id="@+id/button6"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:onClick="doHeart"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="震动"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignStart="@+id/button4"
        android:onClick="Vibration"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实时步数"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_alignEnd="@+id/button5"
        android:onClick="RealtimeSteps"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭实时步数通知"
        android:id="@+id/button9"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/button6"
        android:layout_alignParentStart="true"
        android:onClick="stopRealtimeSteps"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="信息"
        android:id="@+id/message"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/button9"
        android:layout_alignParentStart="true" />
</RelativeLayout>
